def (tuples_list):
    # Sort the list of tuples by the second element (index 1)
    return sorted(tuples_list, key=lambda x: x[1])#0 for 1st  and 1 gor 2nd

# Example usage
tuples_list = [(1, 3), (4, 2), (5, 1), (7, 4)]
sorted_list = sort_by_second_element(tuples_list)
print(sorted_list)  # Output: [(5, 1), (4, 2), (1, 3), (7, 4)]
